<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:id="@+id/card"
        android:backgroundTint="#FAFAFA"
        card_view:cardCornerRadius="100px">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@mipmap/arrow_left" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="My Menu"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:textSize="22sp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@mipmap/info_menu" />

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="16dp"
            android:elevation="190dp"
            card_view:cardCornerRadius="70px"
            android:layout_marginRight="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:id="@+id/earnings_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$0.00"
                android:layout_marginTop="35dp"
                android:textColor="#000"
                android:layout_marginLeft="30dp"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Earnings this month"
                android:layout_marginTop="58dp"
                android:layout_marginLeft="30dp"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/earning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="40px"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:src="@mipmap/arrow_right"
                android:layout_alignParentRight="true" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="268dp"
            android:layout_marginLeft="16dp"
            android:elevation="190dp"
            card_view:cardCornerRadius="70px"
            android:layout_marginRight="16dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit your Profile"
                    android:layout_marginTop="58dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="40px"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="25dp"
                    android:src="@mipmap/arrow_right"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="395dp"
            android:layout_marginLeft="16dp"
            android:elevation="190dp"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="70px"
            android:layout_marginRight="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="#000"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit your Account"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="40px"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="25dp"
                    android:src="@mipmap/arrow_right"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/card"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/ic_baseline_notifications_off_24"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silent Mode"
                android:textColor="#fff"
                android:textSize="17sp"/>

            <TextView
                android:gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your notifications are silent"
                android:textColor="#f0f0f0"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/toggle_menu"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="30dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/toggle"/>

    </LinearLayout>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_style"
        android:text="Logout"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#000"
        android:layout_alignParentBottom="true"/>



    </RelativeLayout>